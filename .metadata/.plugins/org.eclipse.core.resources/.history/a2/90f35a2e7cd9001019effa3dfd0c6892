package TestNG;

import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;
import org.testng.asserts.SoftAssert;

public class TestOrder {
//	@Test(priority = 1)
//	public void Water() {
//		IO.println("Test Water");
//	}
//
//	@Test(priority = 0)
//	public void Dragon() {
//		IO.println("Test Dragon");
//		Assert.assertEquals(1.0, 1.1);
//	}
//
//	@Test(priority = -1)
//	public void flying() {
//		IO.println("Test Flying");
//		Assert.assertFalse(false);
//	}

	@Test
	public void a() {
        SoftAssert softAssert = new SoftAssert();
        
        System.out.println("Test method started");

        // First assertion (will fail, but execution continues)
        softAssert.assertEquals(false, true, "First assertion failed"); 
        System.out.println("After first assertion"); // This line executes

        // Second assertion (will pass)
        softAssert.assertTrue(true, "Second assertion failed");
        System.out.println("After second assertion"); // This line also executes

        // Third assertion (will fail)
        softAssert.assertEquals(1, 1, "Third assertion failed");
        System.out.println("After third assertion"); // This line also executes
        
        // Collects all recorded errors and reports them at once
        softAssert.assertAll(); 
        System.out.println("End of test method (this line won't be reached if any assert failed)");
	}

	@BeforeClass
	public void beforeClass() {
		IO.println("Before Class");
	}

	@AfterClass
	public void afterClass() {
		IO.println("After Class");
	}

}
